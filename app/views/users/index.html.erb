<div class="flex flex-wrap justify-center gap-4 p-5">
  <% @users.each do |user| %>
    <div class="max-w-sm rounded overflow-hidden shadow-lg bg-white hover:bg-blue-50 transition-colors duration-150 ease-in-out">
      <div class="px-6 py-4">
        <div class="font-bold text-l mb-2 text-gray-800"><%= user.email %></div>
      </div>
      <div class="px-6 pt-4 pb-2">
        <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-xs font-semibold text-gray-700 mr-2 mb-2">
          date created: <%= user.created_at %>
        </span>
      </div>
    </div>
  <% end %>
</div>