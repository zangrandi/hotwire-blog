<% if @post.persisted? %>
  <%= turbo_stream.prepend "posts", partial: "posts/post", locals: { post: @post } %>
<% else %>
  <turbo-stream action="update" target="new-post-feedback">
    <template>
      <div class="error-message bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
        <strong class="font-bold">
          <%= @post.errors.full_messages.join(", ") %>
        </strong>
      </div>
    </template>
  </turbo-stream>
<% end -%>

