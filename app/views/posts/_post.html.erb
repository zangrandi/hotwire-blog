<div class="w-1/2 max-w-sm rounded overflow-hidden shadow-lg bg-white hover:bg-blue-50 transition-colors duration-150 ease-in-out">
  <div class="px-6 py-4">
    <div class="font-bold text-xl mb-2 text-gray-800"><%= post.body %></div>
  </div>
  <div class="px-6 pt-4 pb-2">
    <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-xs font-semibold text-gray-700 mr-2 mb-2">
      by: <%= post.user.email %>
    </span>
    <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-xs font-semibold text-gray-700 mr-2 mb-2">
      at: <%= post.created_at %>
    </span>
  </div>
</div>